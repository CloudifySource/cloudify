<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>recipes</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/recipes</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<excludes>
				<exclude>**/*elasticsearch*/**</exclude>
				<exclude>**/*jboss*/**</exclude>
				<exclude>**/*postgresql*/**</exclude>
				<exclude>**/applications/simple/**</exclude>
				<exclude>**/nginx/**</exclude>
				<exclude>**/stockdemo/**</exclude>
				<exclude>**/tomcatcluster/**</exclude>
				<exclude>**/couchdb/**</exclude>
				<exclude>**/redis/**</exclude>
				<exclude>**/voltdb/**</exclude>
                <exclude>**/simple/**</exclude>
			</excludes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>