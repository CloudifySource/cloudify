<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.cloudifysource.utilitydomain.kvstorage.spaceentries.GlobalCloudifyAttribute" table="GlobalAttribute">
        <id name="uid" type="string">
            <column name="UID" length="256" />
        </id>
        <property name="key" type="string">
            <column name="KEY" length="256" />
        </property>
        <property name="value" type="serializable">
            <column name="VALUE" length="4096" />
        </property>
    </class>

    <class name="org.cloudifysource.utilitydomain.kvstorage.spaceentries.ApplicationCloudifyAttribute" table="ApplicationAttribute">
        <id name="uid" type="string">
            <column name="UID" length="256" />
        </id>
        <property name="key" type="string">
            <column name="KEY" length="256" />
        </property>
        <property name="value" type="serializable">
            <column name="VALUE" length="4096" />
        </property>
        <property name="applicationName" type="string">
            <column name="APPLICATIONNAME" length="256" />
        </property>
    </class>

    <class name="org.cloudifysource.utilitydomain.kvstorage.spaceentries.ServiceCloudifyAttribute" table="ServiceAttribute">
        <id name="uid" type="string">
            <column name="UID" length="256" />
        </id>
        <property name="key" type="string">
            <column name="KEY" length="256" />
        </property>
        <property name="value" type="serializable">
            <column name="VALUE" length="4096" />
        </property>
        <property name="applicationName" type="string">
            <column name="APPLICATIONNAME" length="256" />
        </property>
        <property name="serviceName" type="string">
            <column name="SERVICENAME" length="256" />
        </property>
    </class>

    <class name="org.cloudifysource.utilitydomain.kvstorage.spaceentries.InstanceCloudifyAttribute" table="InstanceAttribute">
        <id name="uid" type="string">
            <column name="UID" length="256" />
        </id>
        <property name="key" type="string">
            <column name="KEY" length="256" />
        </property>
        <property name="value" type="serializable">
            <column name="VALUE" length="4096"/>
        </property>
        <property name="applicationName" type="string">
            <column name="APPLICATIONNAME" length="256" />
        </property>
        <property name="serviceName" type="string">
            <column name="SERVICENAME" length="256" />
        </property>
        <property name="instanceId" type="integer">
            <column name="INSTANCEID" />
        </property>
    </class>

    <class name="org.cloudifysource.utilitydomain.data.CloudConfigurationHolder" table="CloudConfiguration">
        <id name="id" type="long">
            <column name="ID" />
        </id>
        <property name="cloudConfiguration" type="text">
            <column name="CLOUDCONFIG" />
        </property>
        <property name="cloudConfigurationFilePath" type="string">
            <column name="CLOUDCONFIGPATH" length="256" />
        </property>
    </class>

</hibernate-mapping>